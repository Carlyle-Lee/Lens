<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            android:text="Usage Info:"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            />

        <com.qiyi.lens.ui.widget.tableView.TableView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lens_memo_sys_info"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            android:text="@string/lens_name_memo_info"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="14dp"
            />

        <com.qiyi.lens.ui.widget.tableView.TableView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lens_sys_info_memo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            android:text="当前进程内存信息"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="14dp"
            />

        <com.qiyi.lens.ui.widget.tableView.TableView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lens_sys_info_cpu"
            />




    </LinearLayout>

</ScrollView>
